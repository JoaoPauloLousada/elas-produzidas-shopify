<div class="testimonials container">
  ID shopify-section-{{section.id}}
  <div class="row justify-content-center">
    {% for block in section.blocks %}
      {% if block.type == 'quote' %}
        <div class="testimonials__text col-12 col-md-8 col-lg-5 {% if forloop.index == 1 %}active{% endif %}" id="testimonial-{{forloop.index}}">
          <div class="mb-6">
            <p class="text-center h3">"{{block.settings.text}}"</p>
            <p class="text-center body-text-1">{{block.settings.customer_name}}</p>
          </div>
        </div>
      {% endif %}
    {% endfor %}
  </div>
  <div class="row justify-content-center">
    {% for block in section.blocks %}
      {% if block.type == 'quote' %}
      <div class="col-4 col-lg-2 d-flex justify-content-center">
        <div class="testimonials__img {% if forloop.index == 1 %}active{% endif %}">
          <a class="image-btn d-block w-100 h-100" href="#testimonial-{{forloop.index}}">
            <img src="{{block.settings.img | img_url: '100x'}}" />
          </a>
        </div>
      </div>
      {% endif %}
    {% endfor %}
  </div>
</div>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    var event = new CustomEvent('Testimonials', { 'detail': {
      wrapperId: 'shopify-section-{{section.id}}'
    }});
    window.dispatchEvent(event);
  });
</script>

{% schema %}
{
  "name": "Testimonials",
  "class": "testimonials-wrapper",
  "tag": "section",
  "blocks": [
    {
      "type": "quote",
      "name": {
        "en": "Quote",
        "pt-BR": "Citação"
      },
      "settings": [
        {
          "id": "customer_name",
          "type": "text",
          "label": {
            "en": "Customer's name",
            "pt-BR": "Nome do cliente"
          }
        },
        {
          "id": "img",
          "type": "image_picker",
          "label": {
            "en": "Customer's image",
            "pt-BR": "Imagem do cliente"
          }
        },
        {
          "type": "textarea",
          "id": "text",
          "label": {
            "en": "Customer's testimonial",
            "pt-BR": "depoimento do cliente"
          }
        }
      ]
    }
  ],
  "settings": [
    {
      "id": "title",
      "type": "text",
      "label": {
        "en": "Title",
        "pt-BR": "Título"
      },
      "default": "Testimonials"
    }
  ],
  "presets": [
    {
      "category": "Promotional",
      "name": "Testimonials"
    }
  ]
}
{% endschema %}